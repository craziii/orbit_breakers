	<level id="0" name="Introduction">

		<block absolute="false">

			<color>red</color>

			<x>7</x>
			<y>7</y>

		</block>

		

		<blockLine>
			
			<color>green</color>

			<position class="start">
				<x>7</x>
				<y>0</y>
			</position>

			<direction>y</direction>
			<length>8</length>

		</blockLine>

		<blockLine>
			
			<color>green</color>
			
